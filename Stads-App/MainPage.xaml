<Page
    x:Class="Stads_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView x:Name="NavView" IsSettingsVisible="False" IsBackButtonVisible="Collapsed" IsPaneOpen="True"
                    ItemInvoked="NavView_ItemInvoked" Loaded="NavView_Loaded" BackRequested="NavView_BackRequested" Header="{Binding Path=Content.Header, ElementName=ContentFrame}">
        <NavigationView.MenuItems>
            <NavigationViewItem Icon="Home" Content="Home" Tag="home" />
            <NavigationViewItem Icon="Shop" Content="Alle Winkels" Tag="stores" />
            <NavigationViewItem Icon="OutlineStar" Content="Promoties" Tag="promotions" />
            <NavigationViewItem Icon="Calendar" Content="Evenementen" Tag="events" />
        </NavigationView.MenuItems>
        <Frame x:Name="ContentFrame" Margin="24" />
    </NavigationView>
</Page>